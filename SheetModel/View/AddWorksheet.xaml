<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="SheetModel.AddWorksheet"
	x:Name="Window"
	Title="Adicionar Aba" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

	<StackPanel x:Name="LayoutRoot">
		<StackPanel Height="21.96" Orientation="Horizontal" Margin="8">
			<TextBlock TextWrapping="Wrap" Text="Nome:" VerticalAlignment="Center" Margin="0,0,8,0"/>
			<TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Width="200" d:LayoutOverrides="Height" Text="{Binding Name}"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
			<Button x:Name="btnOk" Content="Ok" Width="75" Height="24" Margin="0,0,8,0" Click="btnOk_Click"/>
			<Button x:Name="btnCancel" Content="Cancel" Width="75" Click="btnCancel_Click"/>
		</StackPanel>
	</StackPanel>
</Window>